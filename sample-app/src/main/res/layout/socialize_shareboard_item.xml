<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/socialize_shareboard_item_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/socialize_shareboard_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        tools:src="@drawable/socialize_wechat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socialize_shareboard_pltform_name"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:singleLine="true"
        android:textSize="11sp"
        android:gravity="center"
        tools:text="@string/social_share_wechat"/>
</LinearLayout>